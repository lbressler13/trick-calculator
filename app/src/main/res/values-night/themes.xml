<resources>
    <!-- Base application theme. -->
    <style name="Theme.TrickCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Other system values -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="backgroundColor">@color/black</item>
        <item name="background">@color/black</item>
        <!-- Action bar-->
        <item name="actionBarBackground">@color/dark_action_bar</item>
        <item name="actionBarTextColor">@color/black</item>
        <item name="actionBarSwitchThumbColor">@color/black</item>
        <item name="actionBarSwitchTrackCheckedColor">@color/purple_500</item>
        <item name="actionBarSwitchTrackUncheckedColor">@color/purple_900</item>
        <!-- Other -->
        <item name="disabledBackground">@color/dark_disabled_background_gray</item>
        <item name="disabledForeground">@color/dark_disabled_foreground_gray</item>
        <item name="errorColor">@color/dark_error_color</item>
        <item name="firstTermColor">@color/dark_first_term_color</item>
    </style>
</resources>