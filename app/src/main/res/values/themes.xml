<resources>
    <!-- Base application theme. -->
    <style name="Theme.TrickCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Other system values -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="backgroundColor">@color/light_background</item>
        <item name="background">@color/light_background</item>
        <item name="android:textColorLink">@color/teal_700</item>
        <!-- Action bar -->
        <item name="actionBarBackground">@color/purple_700</item>
        <item name="actionBarTextColor">@color/white</item>
        <item name="actionBarSwitchThumbColor">@color/white</item>
        <item name="actionBarSwitchTrackCheckedColor">@color/teal_200</item>
        <item name="actionBarSwitchTrackUncheckedColor">@color/teal_700</item>
        <!-- Other -->
        <item name="disabledBackground">@color/light_disabled_background_gray</item>
        <item name="disabledForeground">@color/light_disabled_foreground_gray</item>
        <item name="errorColor">@color/light_error_color</item>
        <item name="firstTermColor">@color/light_first_term_color</item>
    </style>
</resources>