<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="CustomLight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Other system values -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="backgroundColor">@color/light_background</item>
        <item name="background">@color/light_background</item>
        <!-- Custom values-->
        <item name="actionBarBackground">@color/purple_700</item>
        <item name="actionBarTextColor">@color/white</item>
        <item name="actionBarSwitchThumbColor">@color/white</item>
        <item name="actionBarSwitchTrackCheckedColor">@color/teal_200</item>
        <item name="actionBarSwitchTrackUncheckedColor">@color/teal_700</item>
        <item name="disabledBackground">@color/light_disabled_background_gray</item>
        <item name="disabledForeground">@color/light_disabled_foreground_gray</item>
        <item name="errorColor">@color/light_error_color</item>
        <item name="firstTermColor">@color/light_first_term_color</item>
    </style>

    <style name="CustomDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Other system values -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="backgroundColor">@color/black</item>
        <item name="background">@color/black</item>
        <!-- Custom values-->
        <item name="actionBarBackground">@color/dark_action_bar</item>
        <item name="actionBarTextColor">@color/black</item>
        <item name="actionBarSwitchThumbColor">@color/white</item>
        <item name="actionBarSwitchTrackCheckedColor">@color/purple_500</item>
        <item name="actionBarSwitchTrackUncheckedColor">@color/purple_900</item>
        <item name="disabledBackground">@color/dark_disabled_background_gray</item>
        <item name="disabledForeground">@color/dark_disabled_foreground_gray</item>
        <item name="errorColor">@color/dark_error_color</item>
        <item name="firstTermColor">@color/dark_first_term_color</item>
    </style>

    <style name="NumpadButton" parent="Widget.AppCompat.Button">
        <!-- Layout -->
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">7.5dp</item>
        <item name="android:layout_marginEnd">7.5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <!-- Style -->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">35sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="NumpadButton.Image" parent="Widget.AppCompat.ImageButton">
        <!-- Layout -->
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">7.5dp</item>
        <item name="android:layout_marginEnd">7.5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <!-- Style -->
        <item name="tint">?colorOnPrimary</item>
    </style>

    <style name="SettingsSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>
</resources>