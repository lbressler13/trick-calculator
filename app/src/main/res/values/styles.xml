<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Numpad -->

    <style name="NumpadButton" parent="Widget.AppCompat.Button">
        <!-- Layout -->
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">7.5dp</item>
        <item name="android:layout_marginEnd">7.5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <!-- Style -->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">35sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="NumpadButton.Image" parent="Widget.AppCompat.ImageButton">
        <!-- Layout -->
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">7.5dp</item>
        <item name="android:layout_marginEnd">7.5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <!-- Style -->
        <item name="tint">?colorOnPrimary</item>
    </style>

    <!-- Settings -->

    <style name="DeveloperToolsButton" parent="Widget.AppCompat.Button">
        <!-- Layout -->
        <item name="android:layout_width" >match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">25dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <!-- Style -->
        <item name="android:background">?colorPrimaryDark</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SettingsDialogItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="SettingsFragmentItem">
        <!-- Layout -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">25dp</item>
        <!-- Style -->
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?colorOnBackground</item>
    </style>

    <style name="SettingsFragmentItem.Button">
        <!-- Layout -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Style -->
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SettingsSectionHeading">
        <!-- Layout -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">2dp</item>
        <!-- Style -->
        <item name="android:background">?colorPrimary</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="SpinnerItem">
        <!-- Layout -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">15dp</item>
        <!-- Style -->
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textAlignment">inherit</item>
    </style>
</resources>